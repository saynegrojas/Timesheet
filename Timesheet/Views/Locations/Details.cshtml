@model Timesheet.Models.Location

@{ ViewBag.Title = $"{Model.LocationName} Location Details"; }

@Html.Partial("_PartialLogout")

<h2> <b>@Model.LocationName</b> Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal well">
        <dt>
            Location Name
        </dt>

        <dd>
            @Html.ActionLink(Model.LocationName, "Edit", new { id = Model.LocationID }, new { datatoggle = "tooltip", title = $"Click to edit {Model.LocationName} location" })
        </dd>

        <dt>
            Sector Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sector.SectorName)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
