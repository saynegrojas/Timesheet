@model IEnumerable<Timesheet.Models.Location>

@{
    ViewBag.Title = "Index";
}
<style>
    th {
        background-color: black;
        color: white;
    }

    a:hover {
        color: blue;
    }
</style>
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Location", "Create")
</p>
<table class="table table-striped table-hover">

    <tr class="tr-dark">
        <th>
            Location Name
        </th>
        <th>
            Sector Name
        </th>
        <th></th>
    </tr>
    </>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LocationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sector.SectorName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.LocationID }, new { Style = "color:black; font-size:18px;", @class = "fa fa-edit" }) |
                @Html.ActionLink("Details", "Details", new { id = item.LocationID }, new { htmlAttributes = new { @class = "form-control" } }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.LocationID }, new { htmlAttributes = new { @class = "form-control" } })
            </td>
        </tr>
    }

</table>
