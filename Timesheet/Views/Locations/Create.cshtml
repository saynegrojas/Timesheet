@model Timesheet.Models.Location

@{
    ViewBag.Title = "Create";
}
<h2></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <p class="text-right">
        <a href="@Url.Action("Logout", "Home")">Log out</a>
    </p>
    <h2>Create a new Location</h2>
    <hr />
    @Html.ValidationSummary(true, ViewBag.SectorName as string, new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.LocationID, "Location Id", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LocationID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LocationID, ViewBag.ValLocationId as string, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LocationName, "Location Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LocationName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LocationName, ViewBag.ValLocationName as string, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
            @Html.LabelFor(model => model.Sector, "Sector Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SectorName", null, new { name = "SectorName", id = "SectorID", htmlAttributes = new { @class = "form -control" } })
                @Html.ValidationMessageFor(model => model.SectorName, "", new { @class = "text-danger" })
            </div>
        </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</div>

    <script>
        document.getElementById("SectorName").value = "@ViewBag.strSlectedSector";
    </script>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
