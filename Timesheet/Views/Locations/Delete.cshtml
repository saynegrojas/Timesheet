@model Timesheet.Models.Location

@{ ViewBag.Title = $" Delete {Model.LocationName}"; }

<style>
    .logout {
        margin-top: 50px;
    }
</style>
<p class="text-right logout">
    <a href="@Url.Action("Logout", "Home")">Log out</a>
</p>
<h2>Are you sure you want to delete <b>@Model.LocationName</b>?</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Location Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LocationName)
        </dd>

        <dt>
            Sector Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sector.SectorName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
@Html.AntiForgeryToken()

                <div class="form-actions no-color">

                    <input type="submit" value="Delete" class="btn btn-default" />
                </div>
                }
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>