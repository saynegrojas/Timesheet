@model Timesheet.Models.Location

@{
    ViewBag.Title = $"Confrim {Model.LocationName} Delete";
}

<h2>  </h2>

<div>
    <h4>Click Delete to permanetly delete the <b>@Model.LocationName</b> Location</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Location Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LocationName)
        </dd>

        <dt>
            Sector Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sector.SectorName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Back to List", "Index") |
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>
