@model Timesheet.Models.HourCode

@{
    ViewBag.Title = $"Edit {Model.CodeDescription}";
}

@Html.Partial("_PartialLogout")

<h2>Edit <b>@Model.CodeDescription</b></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CodeID)

    <div class="form-group">
        @Html.LabelFor(model => model.CodeDescription, "Code Desciption", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CodeDescription, new { htmlAttributes = new { @class = "form-control" } })
            <br />
            @Html.ValidationMessageFor(model => model.CodeDescription, ViewBag.ValidateHourCode as string, new { @class = "field-validation-error" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CodeValue, "Code Value", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CodeValue, new { htmlAttributes = new { @class = "form-control" } })
            <br />
            @Html.ValidationMessageFor(model => model.CodeValue, ViewBag.ValidateCodeValue as string, new { @class = "field-validation-error" })
        </div>
    </div>

    <div class="form-actions no-color">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
