@model Timesheet.Models.Doctor

@{
    ViewBag.Title = $"Edit DR. {Model.LastName}";

}

<style>
    .logout {
        margin-top: 50px;
    }
</style>
<p class="text-right logout">
    <a href="@Url.Action("Logout", "Home")">Log out</a>
</p>
@*<h2>Edit Doctor</h2>*@
