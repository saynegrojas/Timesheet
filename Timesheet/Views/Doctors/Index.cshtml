@model IEnumerable<Timesheet.Models.Doctor>

@{ ViewBag.Title = "Index"; }
<div class="navbar-collapse collapse">
    <ul class="nav navbar-nav">
        <li>@Html.ActionLink("User", "Index", "Users")</li>
        <li>@Html.ActionLink("Doctors", "Index", "Doctors")</li>
        <li>@Html.ActionLink("Locations", "Index", "Locations")</li>

    </ul>
</div>
<p class="text-right">
    <a href="@Url.Action("Logout", "Home")">Log out</a>
</p>
<h2>Select a Doctor</h2>
<p class="text-right">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayName("Doctor ID")
        </th>
        <th>
            @Html.DisplayName("First Name")
        </th>
        <th>
            @Html.DisplayName("Last Name")
        </th>
        <th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(Convert.ToString(item.DoctorId), "Create", "Schedules", new { id = item.DoctorId } ,new { datatoggle = "tooltip", title = $"Click to schedule {item.FirstName} {item.LastName}" })
                @*@Html.ActionLink(location, "Edit", new { id = item.LocationID }, new { datatoggle = "tooltip", title = $"Click to select {item.LocationName} location" })*@

            </td>
            <td>
                @*@Html.ActionLink(Convert.ToString(item.FirstName), "Create", "Schedules", new { id = item.DoctorId }, new { datatoggle = "tooltip", title = $"Click to set a schedule" })*@
                @Html.DisplayFor(modelItem => item.FirstName)

            </td>
            <td>
                @*@Html.ActionLink(Convert.ToString(item.LastName), "Create", "Schedules", new { id = item.DoctorId }, new { datatoggle = "tooltip", title = $"Click to set a schedule" })*@
                @Html.DisplayFor(modelItem => item.LastName)


            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DoctorId }) |
                @Html.ActionLink("Details", "Details", new { id = item.DoctorId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DoctorId })
            </td>
        </tr>
}

</table>