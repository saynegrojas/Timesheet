@model IEnumerable<Timesheet.Models.Doctor>

@{ ViewBag.Title = "Index"; }
@Html.Partial("_PartialDocLoc")

<style>
    a.first-name {
        color: #333333;
        font-weight: bold;
    }

    #reset {
        background-color: #56baed;
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        text-transform: uppercase;
        font-size: 13px;
        -webkit-box-shadow: 0 10px 30px 0 rgba(95,186,233,0.4);
        box-shadow: 0 10px 30px 0 rgba(95,186,233,0.4);
        -webkit-border-radius: 5px 5px 5px 5px;
        border-radius: 5px 5px 5px 5px;
        margin: 5px 20px 40px 20px;
        -webkit-appearance: button;
        cursor: pointer;
    }

        #reset > a {
            text-decoration: none;
            color: white;
        }

        #reset:focus {
            background-color: #fff;
            border-bottom: 2px solid #5fbae9;
        }

        #reset:active {
            -moz-transform: scale(0.95);
            -webkit-transform: scale(0.95);
            -o-transform: scale(0.95);
            -ms-transform: scale(0.95);
            transform: scale(0.95);
        }

        #reset:hover {
            background-color: #39ace7;
        }
</style>

<h2>Select a Doctor</h2>

@using (Html.BeginForm("Index", "Doctors", FormMethod.Get))
{

<div>
    <b>Search By:</b>
    Name 
    <br />
    @Html.TextBox("searchString")
    <input type="submit" value="Search" />
    <button id="reset">@Html.ActionLink("Reset", "Index")</button>
</div>
<table class="table table-striped table-hover">
    <p class="text-right">
    @Html.ActionLink("Add Doctor", "Create")
</p>
    <tr> 
        <th>
            @Html.DisplayName("Doctor Email")
        </th>
        <th>
            @Html.DisplayName("First Name")
        </th>
        <th>
            @Html.DisplayName("Last Name")
        </th>
        <th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="8">No record was found</td>
        </tr>
    }
    else
    {
    foreach (var item in Model)
    {
<tr>
    <td>
        @Html.ActionLink(Convert.ToString(item.Email), "Create", "Schedules", new { id = item.DoctorId }, new { datatoggle = "tooltip", title = $"Click to schedule {item.FirstName} {item.LastName}" })
        @*@Html.ActionLink(location, "Edit", new { id = item.LocationID }, new { datatoggle = "tooltip", title = $"Click to select {item.LocationName} location" })*@

    </td>
    <td>
        @*@Html.ActionLink(Convert.ToString(item.FirstName), "Create", "Schedules", new { id = item.DoctorId }, new { datatoggle = "tooltip", title = $"Click to set a schedule" })*@
        @Html.DisplayFor(modelItem => item.FirstName)

    </td>
    <td>
        @*@Html.ActionLink(Convert.ToString(item.LastName), "Create", "Schedules", new { id = item.DoctorId }, new { datatoggle = "tooltip", title = $"Click to set a schedule" })*@
        @Html.DisplayFor(modelItem => item.LastName)


    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.DoctorId }) |
        @Html.ActionLink("Details", "Details", new { id = item.DoctorId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.DoctorId })
    </td>
</tr>
    }
}
</table>
}