@model IEnumerable<Timesheet.Models.Sector>

@{ ViewBag.Title = "Index"; }

@Html.Partial("_PartialNavbar");

<p class="text-right">
    <a href="@Url.Action("Logout", "Home")">Log out</a>
</p>
<h2>Sector</h2>
<p class="text-right">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SectorName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.ActionLink(item.SectorName, "Details", new { id = item.SectionID }, new { datatoggle = "tooltip", title = $"Click for details" })
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.SectionID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.SectionID })
    </td>
</tr>}

</table>

